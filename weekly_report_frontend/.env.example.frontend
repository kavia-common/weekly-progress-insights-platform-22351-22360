# Frontend environment variables (safe to expose to browser)
# Copy to `.env` for local development. These values are read at build time.
# Note: Do not put secrets here.

# Backend API base (preferred). Fallback is REACT_APP_BACKEND_URL. If both unset, defaults to provided cloud URL with /api.
# You can include a trailing slash; it will be normalized. Example: https://your-backend.example.com/api/
REACT_APP_API_BASE=https://digitalt3-weekly-report-platform-1.kavia.app/api/

# Optional legacy fallback (used if REACT_APP_API_BASE not set)
REACT_APP_BACKEND_URL=

# Feature flags
# Set to true to bypass auth guards for local UI testing (do not use in prod).
REACT_APP_DISABLE_AUTH=false

# Optional: Frontend URL for redirect flows
REACT_APP_FRONTEND_URL=http://localhost:3000

# Optional: Websocket URL if your backend uses it
REACT_APP_WS_URL=
